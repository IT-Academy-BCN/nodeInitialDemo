<%- layout("layouts/main.ejs")%>

<div class="row">
    <div class="col-md-4 offset-md-4">
        <div class="card mt-4 text-center">
            <div class="card-header">
                <h3>Signup</h3>
            </div>
            <div class="card-body">
                <form action="/signup" method="POST">
                    <div class="form-group">
                        <input type="text" name="name" placeholder="Escriu el nom" class="form-control">
                    </div>
                    <div class="form-group">
                        <input type="password" name="password" placeholder="Escriu la contrasenya" class="form-control">
                    </div>
                    
                    <button type="submit" class="btn btn-primary btn-block mt-4">Signup</button>
                </form>
            </div>
        </div>
    </div>
</div>